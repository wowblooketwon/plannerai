  <script>
    const chat = document.getElementById('chat');

    function sendMessage() {
      const input = document.getElementById('userInput');
      const userText = input.value;
      appendMessage('You', userText);
      input.value = '';
      
      getBotReply(userText);
    }

    function appendMessage(sender, text) {
      chat.innerHTML += `<p><strong>${sender}:</strong> ${text}</p>`;
      chat.scrollTop = chat.scrollHeight;
    }

    function getBotReply(msg) {
      // ðŸ§  Simple AI Response (replace with real API later)
      let reply = "huh?";
      if (msg.toLowerCase().includes("wsg")) reply = "wsg lil bro ðŸ˜ˆ";
      else if (msg.toLowerCase().includes("who made you")) reply = "Lil Bro did ðŸ";
      else if (msg.toLowerCase().includes("bye")) reply = "ight bye bru ðŸ‘‹";
      else reply = "I feel you ðŸ˜¶â€ðŸŒ«ï¸";

      setTimeout(() => appendMessage("Bot", reply), 500);
    }
  </script>
