<body>
  <h1>ü§ñ Real AI Bot</h1>
  <div id="chat"></div>
  <input type="text" id="userInput" placeholder="Say something...">
  <button onclick="sendMessage()">Send</button>

  <script>
    const chat = document.getElementById('chat');

    function appendMessage(sender, text) {
      chat.innerHTML += `<p><strong>${sender}:</strong> ${text}</p>`;
      chat.scrollTop = chat.scrollHeight;
    }

    async function sendMessage() {
      const input = document.getElementById('userInput');
      const userMessage = input.value.trim();
      if (!userMessage) return;

      appendMessage("You", userMessage);
      input.value = '';
      appendMessage("Bot", "typing...");

      try {
        const response = await fetch("https://api.openai.com/v1/chat/completions", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "Authorization": "Bearer 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"
          },
          body: JSON.stringify({
            model: "gpt-3.5-turbo",
            messages: [{ role: "user", content: userMessage }]
          })
        });

        const data = await response.json();
        const reply = data.choices?.[0]?.message?.content || "No reply ü§î";

        chat.lastChild.remove(); // Remove "typing..."
        appendMessage("Bot", reply);
      } catch (error) {
        chat.lastChild.remove();
        appendMessage("Bot", "Error bruh ‚ùå");
        console.error(error);
      }
    }
  </script>
</body>
